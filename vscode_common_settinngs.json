{
    "launch": {},
    "[json]": {},
    "files.trimTrailingWhitespace": true,
    //
    "terminal.integrated.splitCwd": "inherited",
    "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.scrollback": 99999,
    //
    "security.promptForLocalFileProtocolHandling": false,
    "security.workspace.trust.untrustedFiles": "open",
    //
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    //
    "editor.renderWhitespace": "all",
    "editor.hover.enabled": "on",
    "editor.multiCursorModifier": "ctrlCmd",
    // In order to use usual keyboard shortcut of your shell, but not VScode's one
    "editor.unicodeHighlight.allowedLocales": {
        "diffEditor.ignoreTrimWhitespace": false,
        "ru": true
    },
    //// Python related settings
    ///
    "[python]": {
        // Black formatter almost don't use format-on-type, so you mostly won't feel it
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        // I don't use import auto-sort on save
        // because it's practically inconvenient
        // 1. Some team member don't use it
        // 2. etc.
        // Instead of, use when you need by pressing Shift + Alt + O
        // "editor.codeActionsOnSave": {
        //     "source.organizeImports": "explicit"
        // },
    },
    "isort.check": true,
    ///// Jupyter notebook
    //
    "notebook.lineNumbers": "on",
    // To ALWAYS open refference in new file
    // It didn't work
    "workbench.editor.enablePreviewFromCodeNavigation": false,
    "workbench.editor.revealIfOpen": false,
    //
    // "window.zoomLevel": 0.5,
    "workbench.colorTheme": "Visual Studio Light - C++",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.iconClickBehavior": "focus",
    "editor.minimap.enabled": true,
    "breadcrumbs.enabled": true,
    "update.showReleaseNotes": false,
    "zenMode.hideLineNumbers": false,
    "scm.showHistoryGraph": false,
}
